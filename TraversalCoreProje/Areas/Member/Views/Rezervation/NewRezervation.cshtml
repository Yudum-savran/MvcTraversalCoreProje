@model EntityLayer.Concrete.Rezervation
@{
    ViewData["Title"] = "NewRezervation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Yeni Rezervasyon Sayfası</h1>
<form method="post">
    <div class="form-control">
        @Html.Label("Kişi Sayısı")
        <input type="text" asp-for="PersonCount" class="form-control" />
    </div>
    <br />
    <div class="form-control">
        @Html.Label("Lokasyon")
        @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-control">
        @Html.Label("Tarih")
        <input type="date" asp-for="RezervationDate" class="form-control" />
    </div>
    <br />
    <div class="form-control">
        @Html.Label("Varsa Eklemek İstedikleriniz")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <br />
    <button class="btn btn-success" onclick="alert('Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır.Rezervasyon onaylanma süreci için güncel rezervasyonlarım menüsünü takip etmeyi unutmayın')">Rezervasyon Yap</button>
</form>

